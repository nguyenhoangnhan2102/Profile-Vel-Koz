<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Champions</a>
    </div>
    <div class="table-container">
        <div class="title">List Champions</div>
        <table>
            <tr>
                <th>ID Skill</th>
                <th>ID Passive</th>
                <th>Name Skill</th>
                <th>Detail Skill</th>
                <th>Image</th>
            </tr>
            <% listSkillE.forEach(function(skill_e) { %>
                <tr>
                    <td>
                        <%= skill_e.id_e %>
                    </td>
                    <td>
                        <%= skill_e.id_skill %>
                    </td>
                    <td>
                        <%= skill_e.ten_skill_e %>
                    </td>
                    <td>
                        <%= skill_e.motaskill_e %>
                    </td>
                    <td>
                        <img src="/img/<%= skill_e.hinhanh_e %>" alt="" width="200px" height="200px">
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>

</body>

</html>