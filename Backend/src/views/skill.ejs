<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skin</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Champions</a>
    </div>
    <div class="table-container">
        <div class="title">List Skin</div>
        <table>
            <tr>
                <th>ID Skill</th>
                <th>ID Skin</th>
                <th>Nội tại</th>
                <th>Q</th>
                <th>W</th>
                <th>E</th>
                <th>R</th>
                <th>Action</th>
            </tr>
            <% listSkill.forEach(function(skill) { %>
                <tr>
                    <td>
                        <%= skill.id_skill %>
                    </td>
                    <td>
                        <%= skill.champion_id %>
                    </td>
                    <td>
                        <%= skill.noitai %>
                    </td>
                    <td>
                        <%= skill.q %>
                    </td>
                    <td>
                        <%= skill.w %>
                    </td>
                    <td>
                        <%= skill.e %>
                    </td>
                    <td>
                        <%= skill.r %>
                    </td>
                    <td>
                        <a href="/update-skill/<%= skill.id_skill %>">Edit</a>
                        <form action="/delete-skill/<%= skill.id_skill %>" method="post">
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>
    <div>
        <a href="/create-skin-page">Thêm mới</a>
    </div>

</body>

</html>